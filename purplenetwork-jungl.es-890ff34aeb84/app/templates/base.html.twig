	<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NVF9LSX" height="0" width="0"
			style="display:none;visibility:hidden"></iframe></noscript>
	<!-- End Google Tag Manager (noscript) -->

	{% block content %}{% endblock %}
	<script>
		window.recaptchaKey = '6Lf-hOQUAAAAADPxIb8cKYImbLiAaPraz2q8huRG';
		window.apiUrl = '/api/contact';
	</script>
	<script src="https://www.google.com/recaptcha/api.js?render=explicit&hl=it" async defer></script>
	<script type="text/javascript" src="{{ asset('DrawSVGPlugin.js') }}"></script>
	<script type="text/javascript" src="{{ asset('static/main.js') }}"></script>
</body>

</html>
