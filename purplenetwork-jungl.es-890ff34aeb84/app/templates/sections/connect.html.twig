<article class="content js-section" data-id="connect">
  <div class="content__faketitle content__faketitle--connect js-fake-blob-title"></div>

  <div class="content__fakescroll content__fakescroll--connect js-fake-scroll"></div>

  <div class="description js-description">
    {% trans %}sections.connect.description{% endtrans %}
  </div>

  <div class="background__icons background__icons--connect">
		{% include 'svg/connect.html.twig' with {'className': 'js-icon-connect-1'} %}
		{% include 'svg/connect.html.twig'  with {'className': 'js-icon-connect-2'} %}
	</div>

  <div class="blob">
    <div class="blob__image blob__image--connect js-blob-image">
      <div class="description description--blob">
        {% trans %}sections.connect.description_blob{% endtrans %}
      </div>

      <div class="description description--blob description--blob-mobile">
        {% trans %}sections.connect.description_blob_mobile{% endtrans %}
      </div>
    </div>
  </div>
</article>
